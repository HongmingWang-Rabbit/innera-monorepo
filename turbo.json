{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV"],
  "globalPassThroughEnv": ["DATABASE_URL", "REDIS_URL", "CORS_ORIGINS", "S3_BUCKET", "S3_ENDPOINT", "S3_REGION", "S3_FORCE_PATH_STYLE", "SENTRY_DSN", "JWT_SECRET", "MASTER_ENCRYPTION_KEY", "COOKIE_SECRET", "S3_ACCESS_KEY", "S3_SECRET_KEY"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "passThroughEnv": ["JWT_SECRET", "MASTER_ENCRYPTION_KEY", "COOKIE_SECRET", "S3_ACCESS_KEY", "S3_SECRET_KEY", "GOOGLE_CLIENT_ID", "GOOGLE_CLIENT_SECRET", "APPLE_CLIENT_ID", "APPLE_CLIENT_SECRET"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": ["NEXT_PUBLIC_API_BASE_URL"],
      "outputs": ["dist/**", ".next/**", ".expo/**", "!.next/cache/**", "styles/tamagui.css"]
    },
    "lint": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "app/**/*.ts", "app/**/*.tsx"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.ts", "src/**/*.tsx", "app/**/*.ts", "app/**/*.tsx"]
    },
    "test:unit": {
      "dependsOn": ["^build"]
    },
    "test:integration": {
      "dependsOn": ["^build"],
      "passThroughEnv": ["JWT_SECRET", "MASTER_ENCRYPTION_KEY", "COOKIE_SECRET", "S3_ACCESS_KEY", "S3_SECRET_KEY"]
    },
    "test:e2e": {
      "dependsOn": ["build"]
    },
    "clean": {
      "cache": false
    }
  }
}
