{
  "name": "innera-monorepo",
  "private": true,
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "test:unit": "turbo test:unit",
    "test:integration": "turbo test:integration",
    "test:e2e": "turbo test:e2e",
    "db:migrate": "pnpm --filter @innera/db migrate",
    "db:generate": "pnpm --filter @innera/db generate",
    "db:studio": "pnpm --filter @innera/db studio",
    "clean": "turbo clean && rm -rf node_modules/.cache"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.3"
  },
  "packageManager": "pnpm@10.5.0",
  "engines": {
    "node": ">=20"
  }
}
