    "@innera/db": "workspace:*",
    "@innera/shared": "workspace:*",
    "bullmq": "^5.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.1.0",
    "ioredis": "^5.4.0",
    "jose": "^6.0.0",
    "pino": "^9.0.0",
    "tsx": "^4.0.0",
    "zod": "^3.24.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.0"
