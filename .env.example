# ===========================================
# Database
# ===========================================
DATABASE_URL=postgres://innera:innera_dev@localhost:5432/innera

# DB Connection Pool
DB_POOL_MAX=20
DB_POOL_MIN=2
DB_IDLE_TIMEOUT_MS=30000
DB_CONNECTION_TIMEOUT_MS=5000
DB_SSL=false

# ===========================================
# Redis
# ===========================================
REDIS_URL=redis://:devpassword@localhost:6379

# ===========================================
# Authentication - OAuth Providers
# ===========================================
GOOGLE_CLIENT_ID=xxx
GOOGLE_CLIENT_SECRET=xxx
APPLE_CLIENT_ID=xxx
APPLE_TEAM_ID=xxx
APPLE_KEY_ID=xxx
APPLE_PRIVATE_KEY=xxx

# ===========================================
# Security & Secrets
# ===========================================
MASTER_ENCRYPTION_KEY=  # Generate with: openssl rand -hex 32
JWT_SECRET=change-me-to-a-random-64-char-string  # IMPORTANT: Change this value! The API will reject known placeholder values. Generate with: openssl rand -hex 32
COOKIE_SECRET=          # Generate with: openssl rand -hex 32

# ===========================================
# Server
# ===========================================
PORT=3001
HOST=0.0.0.0
NODE_ENV=development
TRUST_PROXY_HOPS=0

# ===========================================
# Server Configuration
# ===========================================
CORS_ORIGINS=http://localhost:3000,http://localhost:19006
LOG_LEVEL=debug

# ===========================================
# Object Storage (S3 / Cloudflare R2 / MinIO)
# ===========================================
S3_BUCKET=innera-attachments
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=innera_dev
S3_SECRET_KEY=innera_minio_dev
# Required for MinIO local dev (path-style URLs); disable in production with AWS S3
S3_FORCE_PATH_STYLE=true

# ===========================================
# Web App
# ===========================================
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001

# ===========================================
# Email (Resend)
# ===========================================
RESEND_API_KEY=re_your_resend_api_key

# ===========================================
# Observability
# ===========================================
SENTRY_DSN=xxx

# ===========================================
# Shutdown
# ===========================================
SHUTDOWN_TIMEOUT_MS=30000

# ===========================================
# Testing
# ===========================================
TEST_AUTH_ENABLED=false
